<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
      body {
        max-width: 980px;
        margin: auto;
        justify-content: center;
        justify-items: center;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
      .header {
        font-size: 40px;
        color: brown;
      }
      /* Styling tabel */
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 16px;
        text-align: left;
      }

      table th,
      table td {
        border: 1px solid #ddd;
        padding: 8px;
      }

      table thead tr {
        background-color: #f4f4f4;
        color: #333;
        font-weight: bold;
      }

      table tbody tr:nth-child(even) {
        background-color: #f9f9f9;
      }

      table tbody tr:hover {
        background-color: #f1f1f1;
      }

      th {
        padding-top: 12px;
        padding-bottom: 12px;
        background-color: #4caf50;
        color: white;
      }

      /* Styling tombol */
      .action-btn {
        padding: 5px 10px;
        font-size: 14px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: white;
      }

      .edit-btn {
        background-color: #007bff;
      }

      .edit-btn:hover {
        background-color: #0056b3;
      }

      .delete-btn {
        background-color: #dc3545;
      }

      .delete-btn:hover {
        background-color: #a71d2a;
      }
    </style>
  </head>
  <body>
    <h1 class="header">Welcome to Mahasiswa Database</h1>
    <div>
      <a href="/create">Tambah Data</a>
    </div>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>NIM</th>
          <th>Nama</th>
          <th>Prodi</th>
          <th>Semester</th>
          <th>Presensi</th>
          <th>Tugas</th>
          <th>UTS</th>
          <th>UAS</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((row) => { %>
        <tr>
          <td><%= row.id %></td>
          <td><%= row.nim %></td>
          <td><%= row.nama %></td>
          <td><%= row.prodi %></td>
          <td><%= row.semester %></td>
          <td><%= row.nilai_presensi %></td>
          <td><%= row.nilai_tugas %></td>
          <td><%= row.nilai_uts %></td>
          <td><%= row.nilai_uas %></td>
          <td>
            <a href="/update/<%= row.id %>">
              <button class="action-btn edit-btn">Edit</button>
            </a>
            <form
              action="/delete/<%= row.id %>"
              method="POST"
              style="display: inline"
            >
              <button class="action-btn delete-btn">Hapus</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <script>
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get("deleted") === "true") {
        Swal.fire({
          title: "Data berhasil dihapus!",
          icon: "success",
          confirmButtonText: "OK",
        });
      }
    </script>
  </body>
</html>
